@{
    ViewBag.Image = "https://static.vecteezy.com/system/resources/thumbnails/009/357/549/small_2x/eps10-grey-cake-line-icon-isolated-on-white-background-cake-with-candles-outline-symbol-in-a-simple-flat-trendy-modern-style-for-your-web-site-design-logo-pictogram-and-mobile-application-free-vector.jpg";
}

<h2>Bun venit!</h2>
<br />

<div class="row">
   
    <div class="col-12">
        <div class="bg-light rounded-3  mb-4">
            <div class="row ">
                <div class="col-md-8">
                    <a href="/Home/ShowHome/@ViewBag.FirstProduct.Id" class="text-decoration-none text-secondary">
                    @if (ViewBag.FirstProduct != null)
                    {
                            <div class="card d-flex w-100 flex-row my-2 fr">
                            <img class="img" src="@ViewBag.FirstProduct.Picture"
                            onerror="this.onerror=null;this.src='@ViewBag.Image'" alt="Nu exista o imagine disponibila">
                                <div class="card-body d-flex flex-column w-100">
                                        <div class="d-flex flex-row justify-content-between">
                                        <h1 class="card-title h-25">@ViewBag.FirstProduct.Title</h1>

                                            <div class="flex-grow-1"></div>
                                        @if (ViewBag.FirstProduct.Rating != 0)
                                        {
                                            <h5 class="justify-content-end">Rating: @ViewBag.FirstProduct.Rating</h5>                                
                                        }
                                         </div>

                                    @*<p class="card-text h-50 w-100">@Html.Raw(ViewBag.FirstProduct.Description)</p>*@

                         
                         <div class="h-25 w-100">
                                    
                                    <br />
                                    <div><i class="bi bi-globe"></i> @ViewBag.FirstProduct.Category.CategoryName</div>
                                </div>
                            </div>
                        </div>

                    }
                    
                </a>
                   
                </div>
                <img class="imgPodium" src="~/images/imagine.png" />
             </div>

           
        </div>  
    
    </div>

<div class="row d-flex justify-content-between w-100">

    @foreach (Product product in ViewBag.Products)
    {

            <div class="col-6 row-style fr1 m-2">
                <a href="/Home/ShowHome/@product.Id" class="text-decoration-none text-secondary">
            <div class="card d-flex w-100 flex-row my-2 p-3">
          
                <img class="img1" src="@product.Picture"
                onerror="this.onerror=null;this.src='@ViewBag.Image'" alt="Nu exista o imagine disponibila">
                   

                <div class="card-body d-flex flex-column w-100 p-3">
                    <div class="d-flex flex-row justify-content-between p-3">
                        <h5 class="card-title h-25">@product.Title</h5>
                        <div class="flex-grow-1"></div>
                            @if (product.Rating != 0){
                        <h5 class="justify-content-end">Rating: @product.Rating</h5>
                            }
                    </div>
                            @*<p class="card-text h-50 w-100">@Html.Raw(product.Description)</p>*@
                            <div class="h-25 w-100 p-3">
                       
                        <br />
                        <div><i class="bi bi-globe"></i> @product.Category.CategoryName</div>
                    </div>
                </div>
                  
            </div>
                </a>
        </div>
       
       



    }
</div>