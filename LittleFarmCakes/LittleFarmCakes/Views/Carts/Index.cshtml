@{
    ViewBag.Image = "https://static.vecteezy.com/system/resources/thumbnails/009/357/549/small_2x/eps10-grey-cake-line-icon-isolated-on-white-background-cake-with-candles-outline-symbol-in-a-simple-flat-trendy-modern-style-for-your-web-site-design-logo-pictogram-and-mobile-application-free-vector.jpg";
}

<h1>Cosul tau de cumparaturi</h1>
<br />
<br />
<hr />

@foreach (var cart in ViewBag.Products)
{
    <div class="card d-flex w-100 flex-row my-2 carts">
        <img class="card-img-top  border border-primary m-to img1" src="@cart.Product.Picture"
         onerror="this.onerror=null;this.src='@ViewBag.Image'"  alt="Nu exista o imagine disponibila">
        <div class="card-body d-flex flex-column w-100">
            <div class="d-flex flex-row justify-content-between">
                <h5 class="card-title h-25 title">@cart.Product.Title</h5>
                <div class="flex-grow-1"></div>
                <a href="/Products/Show/@cart.ProductId" class=" justify-content-end btn btn-info" btn btn-info bf-info">Catre produs</a>
            </div>
            <p class="card-text">@Html.Raw(cart.Product.Description)</p>
            <div class="h-25 w-100">

                <br />

                <div> <h5 class="justify-content-end">Cantitate: @cart.Count</h5></div>

                <div class="d-flex justify-content-between">
                    <form method="post" action="/Carts/Delete" class="w-25 m-3 justify-content-around d-flex align-items-center">
                        <input type="number" min="1" max="@cart.Count" name="Count" value="1" class="h-75 cartInput">
                        <input type="hidden" value="@cart.ProductId" name="ProductId">
                        <button type="submit" class="btn btn-danger">Eliminati cantitate</button>
                    </form>

                    <form method="post" action="/Carts/UpdateCart" class="w-25 m-3 align-items-center d-flex justify-content-around">
                        <input type="number" min="1" name="Count" value="1" class="w-25 cartInput">
                        <input type="hidden" value="@cart.ProductId" name="ProductId">
                        <button type="submit" class="btn btn-success">Adugati cantitate</button>
                    </form>
                </div>

            </div>
        </div>
    </div>
}

<form method="post" action="/Orders/New">
    <button type="submit" class="btn btn-primary m-3">Plaseaza comanda</button>
</form>
